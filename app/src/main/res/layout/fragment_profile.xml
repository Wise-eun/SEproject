<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="내 프로필"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginBottom="-10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="412dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_round_account_circle_24"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="26dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User_name"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="157dp"
                    tools:layout_editor_absoluteY="32dp" />

                <TextView
                    android:id="@+id/user_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="없음/없음/없음"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="157dp"
                    tools:layout_editor_absoluteY="57dp" />

                <Button
                    android:id="@+id/send_msg_btn"
                    android:layout_width="130dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="7px"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="#FF7C01"
                    android:text="profile_edit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    tools:layout_editor_absoluteX="157dp"
                    tools:layout_editor_absoluteY="78dp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/star_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_baseline_star_border_24"
                tools:layout_editor_absoluteX="272dp"
                tools:layout_editor_absoluteY="32dp" />

            <TextView
                android:id="@+id/rating_tv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="312dp"
                tools:layout_editor_absoluteY="32dp" />

        </LinearLayout>

        <TextView
            android:layout_width="410dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/writing_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="  ●  내가 쓴 글"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="20dp"
                android:background="#A7A7A7" />

            <TextView
                android:id="@+id/about_me_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="  ●  자기소개 수정"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="20dp"
                android:background="#A7A7A7" />

            <TextView
                android:id="@+id/pwd_change_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="  ●  비밀번호 변경"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="20dp"
                android:background="#A7A7A7" />


        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>