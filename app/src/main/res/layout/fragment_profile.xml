<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_round_account_circle_24"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="26dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User_name"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="32dp" />

            <TextView
                android:id="@+id/user_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="직업/학교/지역"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="57dp" />

            <Button
                android:background="@drawable/round_btn"
                android:id="@+id/button"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:text="profile_edit"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="78dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/star_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_baseline_star_border_24"
            tools:layout_editor_absoluteX="272dp"
            tools:layout_editor_absoluteY="32dp" />

        <TextView
            android:id="@+id/rating_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:text="3.9"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="312dp"
            tools:layout_editor_absoluteY="32dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="609dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:orientation="vertical"
        android:padding="40dp"
        >

        <TextView
            android:id="@+id/writing_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:textSize="18dp"
            android:text="  ●  내가 쓴 글" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#A7A7A7"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/about_me_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:textSize="18dp"
            android:text="  ●  자기소개 수정" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#A7A7A7"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/pwd_change_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:textSize="18dp"
            android:text="  ●  비밀번호 변경" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#A7A7A7"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/withdraw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:textSize="18dp"
            android:text="  ●  회원 탈퇴" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#A7A7A7"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>