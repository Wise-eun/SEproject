<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/post_listview_item_round">

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/writer_tv"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-10dp"
                android:fontFamily="@font/notosanskrregular"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="User_name"
                android:textColor="#000000"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="255dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="-15dp"
                    android:layout_marginBottom="-4dp"
                    android:fontFamily="@font/notosanskrregular"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:text="[ㅇㅇ공모건] 우짤래공모전입니다"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/personnel_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-15dp"
                    android:fontFamily="@font/notosanskrblack"
                    android:gravity="center_vertical"
                    android:text="(1/4)"
                    android:textColor="#2196F3"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@drawable/post_listview_item_dday"
            android:fontFamily="@font/notosanskrblack"
            android:paddingLeft="9dp"
            android:shadowColor="#FF9800"
            android:text="D-16"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>