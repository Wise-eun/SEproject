<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/homeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Come   ithMe"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/homeFragment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:textColor="@color/orange"
        android:textSize="31sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/homeFragment"
        app:layout_constraintEnd_toEndOf="@+id/homeFragment"
        app:layout_constraintStart_toStartOf="@+id/homeFragment"
        app:layout_constraintTop_toTopOf="@+id/homeFragment" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeFragment" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundbutton"
        android:orientation="horizontal"


        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:id="@+id/et_id"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="찾을내용을 검색해주세요"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />


        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/gray"
            app:srcCompat="@drawable/ic_baseline_search_24"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="609dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/homeFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bell" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/homeFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/message" />

    <ImageButton
        android:id="@+id/btn_category1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/round_btn" />

    <ImageButton
        android:id="@+id/btn_category4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/btn_category1"
        app:layout_constraintTop_toBottomOf="@+id/btn_category1"
        app:srcCompat="@drawable/round_btn" />

    <ImageButton
        android:id="@+id/btn_category7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/btn_category1"
        app:layout_constraintTop_toBottomOf="@+id/btn_category4"
        app:srcCompat="@drawable/round_btn" />

    <ImageButton
        android:id="@+id/btn_category5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_category6"
        app:layout_constraintStart_toEndOf="@+id/btn_category4"
        app:layout_constraintTop_toTopOf="@+id/btn_category4"
        app:srcCompat="@drawable/round_btn" />

    <ImageButton
        android:id="@+id/btn_category8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_category9"
        app:layout_constraintStart_toEndOf="@+id/btn_category7"
        app:layout_constraintTop_toTopOf="@+id/btn_category7"
        app:srcCompat="@drawable/round_btn" />

    <ImageButton
        android:id="@+id/btn_category2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_category3"
        app:layout_constraintStart_toEndOf="@+id/btn_category1"
        app:layout_constraintTop_toTopOf="@+id/btn_category1"
        app:srcCompat="@drawable/round_btn" />

    <ImageButton
        android:id="@+id/btn_category3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/btn_category2"
        app:srcCompat="@drawable/round_btn" />

    <ImageButton
        android:id="@+id/btn_category6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_category3"
        app:layout_constraintTop_toTopOf="@+id/btn_category5"
        app:srcCompat="@drawable/round_btn" />

    <ImageButton
        android:id="@+id/btn_category9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_category3"
        app:layout_constraintTop_toTopOf="@+id/btn_category8"
        app:srcCompat="@drawable/round_btn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기획/아이디어"
        app:layout_constraintBottom_toTopOf="@+id/btn_category4"
        app:layout_constraintEnd_toEndOf="@+id/btn_category1"
        app:layout_constraintStart_toStartOf="@+id/btn_category1"
        app:layout_constraintTop_toBottomOf="@+id/btn_category1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="광고/마케팅"
        app:layout_constraintBottom_toTopOf="@+id/btn_category5"
        app:layout_constraintEnd_toEndOf="@+id/btn_category2"
        app:layout_constraintStart_toStartOf="@+id/btn_category2"
        app:layout_constraintTop_toBottomOf="@+id/btn_category2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영상/사진"
        app:layout_constraintBottom_toTopOf="@+id/btn_category6"
        app:layout_constraintEnd_toEndOf="@+id/btn_category3"
        app:layout_constraintStart_toStartOf="@+id/btn_category3"
        app:layout_constraintTop_toBottomOf="@+id/btn_category3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글/문학"
        app:layout_constraintBottom_toTopOf="@+id/btn_category7"
        app:layout_constraintEnd_toEndOf="@+id/btn_category4"
        app:layout_constraintStart_toStartOf="@+id/btn_category4"
        app:layout_constraintTop_toBottomOf="@+id/btn_category4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="디자인/미술"
        app:layout_constraintBottom_toTopOf="@+id/btn_category8"
        app:layout_constraintEnd_toEndOf="@+id/btn_category5"
        app:layout_constraintStart_toStartOf="@+id/btn_category5"
        app:layout_constraintTop_toBottomOf="@+id/btn_category5" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT/컴퓨터"
        app:layout_constraintBottom_toTopOf="@+id/btn_category9"
        app:layout_constraintEnd_toEndOf="@+id/btn_category6"
        app:layout_constraintStart_toStartOf="@+id/btn_category6"
        app:layout_constraintTop_toBottomOf="@+id/btn_category6" />




</androidx.constraintlayout.widget.ConstraintLayout>